<UserControl x:Class="GmailClient.Views.TestLoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GmailClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="../Icons/GLetter.png" Cursor="Hand" Height="200" Width="200" MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
            <TextBlock Text="Press to Enter" FontSize="22" TextAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
