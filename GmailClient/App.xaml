<Application x:Class="GmailClient.App"
             x:Name="MainAppConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GmailClient"
             StartupUri="Views/TestPage.xaml"
             >
    <Application.Resources>
        <Style x:Key="RoundButtonTemplateShadow" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <Border CornerRadius="50" Background="White">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.5"></DropShadowEffect>
                                </Border.Effect>
                                <ContentPresenter Content="{TemplateBinding Button.Content}" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
         
    </Application.Resources>
</Application>
